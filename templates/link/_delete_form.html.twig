<form method="post" class="float-right" action="{{ path('link_delete', {'short_link': link.shortLink}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ link.shortLink) }}">
    <button class="btn btn-danger">Delete</button>
</form>
